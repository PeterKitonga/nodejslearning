<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>

<%- include('../includes/navigation.ejs') %>

<main>
    <%- include('../includes/alert.ejs') %>

    <form class="login-form" action="/register" method="POST" novalidate>
        <input type="hidden" name="_csrf" value="<%= csrf_token %>">
        
        <div class="form-control">
            <label for="signup-email">E-mail</label>
            <input 
                type="email" 
                name="email" 
                class="<%= error_message.find(e => e.param === 'email') ? 'invalid' : '' %>" 
                id="signup-email" 
                value="<%= old_input.email %>">
        </div>

        <div class="form-control">
            <label for="signup-password">Password</label>
            <input 
                type="password" 
                name="password" 
                class="<%= error_message.find(e => e.param === 'password') ? 'invalid' : '' %>" 
                id="signup-password" 
                value="<%= old_input.password %>">
        </div>

        <div class="form-control">
            <label for="signup-confirm-password">Confirm Password</label>
            <input 
                type="password" 
                name="confirm_password" 
                class="<%= error_message.find(e => e.param === 'confirm_password') ? 'invalid' : '' %>" 
                id="signup-confirm-password" 
                value="<%= old_input.confirm_password %>">
        </div>

        <button class="btn" type="submit">Sign Up</button>
    </form>
</main>

<%- include('../includes/end.ejs') %>