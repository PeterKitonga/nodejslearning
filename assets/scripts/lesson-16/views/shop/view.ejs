<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>

<%- include('../includes/navigation.ejs') %>

<main class="centered">
    <h1><%= product.title %></h1>
    <hr>
    <div>
        <img src="<%= product.image_url %>" alt="<%= product.title %>" style="width: 500px;border-radius: 4px;box-shadow: 0 2.8px 2.2px rgba(0, 0, 0, 0.034), 0 6.7px 5.3px rgba(0, 0, 0, 0.048), 0 12.5px 10px rgba(0, 0, 0, 0.06), 0 22.3px 17.9px rgba(0, 0, 0, 0.072),0 41.8px 33.4px rgba(0, 0, 0, 0.086),0 100px 80px rgba(0, 0, 0, 0.12);">
    </div>
    <h2><%= `$${product.price}` %></h2>
    <p><%= product.description %></p>
    <% if(authenticated) { %>
    <%- include('../includes/addtocart.ejs') %>
    <% } %>
</main>

<%- include('../includes/end.ejs') %>