<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>

<%- include('../includes/navigation.ejs') %>

<main>
    <% if (error_message.length > 0) { %>
        <div class="alert-message alert-message--error"><%= error_message %></div>
    <% } %>
    <form class="login-form" action="/reset/password" method="POST">
        <input type="hidden" name="_csrf" value="<%= csrf_token %>">
        <input type="hidden" name="token" value="<%= token %>">

        <div class="form-control">
            <label for="reset-password">Password</label>
            <input type="password" name="password" id="reset-password" required>
        </div>

        <div class="form-control">
            <label for="reset-confirm-password">Confirm Password</label>
            <input type="password" name="confirm_password" id="reset-confirm-password" required>
        </div>
    
        <button class="btn" type="submit">Reset Password</button>
    </form>
</main>

<%- include('../includes/end.ejs') %>